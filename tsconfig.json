{
   "compilerOptions": {
      "lib": [
         "es6"
      ],
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "sourceMap": true,
      "allowSyntheticDefaultImports": true,
      "isolatedModules": true,
      "strict": true,
      "esModuleInterop": true
   },
   "include": [
      "src/**/*.ts"
   ]
}